    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-md-3">
                <form action="/user/search" method="post">
                    <div class="well">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search products..."
                                        name="search">
                                    <span class="input-group-btn">

                                        <button class="btn btn-primary" type="submit">
                                            <i class="fa fa-search"></i>
                                        </button>

                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <!-- Filter -->


                <!-- Price -->

                <br>
                <h5 class="headline">
                    <span>Category</span>
                </h5>
                <hr>
                <div>
                    <input type="checkbox" id="shop-filter-checkbox_1" name="category" value="Mobile Phone">
                    <a href="/user/filter/Mobile Phone" onclick="mobiles()"><label for="shop-filter-checkbox_1">Mobile
                            Phone</label></a>
                </div>
                <div>
                    <input type="checkbox" id="shop-filter-checkbox_2" name="category" value="Laptop">
                    <a href="/user/filter/laptop"><label for="shop-filter-checkbox_2">Laptop</label></a>
                </div>
                <div>
                    <input type="checkbox" id="shop-filter-checkbox_3" name="category" value="Watch">
                    <a href="/user/filter/watch"><label for="shop-filter-checkbox_3">Watch</label></a>
                </div>
                <br>
                <form class="shop__filter">
                    <h5 class="headline">
                        <span>Price</span>
                    </h5>
                    <hr>
                    <div>
                        <input type="checkbox" name="low-to-high" id="shop-filter-price_1" value="low-to-high">
                        <label for="shop-filter-price_1">Low to High</label>
                    </div>
                    <div>
                        <input type="checkbox" name="high-to-low" id="shop-filter-price_2" value="high-to-low">
                        <label for="shop-filter-price_2">High to Low</label>
                    </div>

                    <!-- Checkboxes -->
                    <br>


                    <!-- Radios -->
                    <h5 class="headline">
                        <span>Alphabetical</span>
                    </h5>
                    <div>
                        <input type="checkbox" name="a-z" id="shop-filter-radio_1" value="a-z">
                        <label for="shop-filter-radio_1">A to Z</label>
                    </div>
                    <div>
                        <input type="checkbox" name="z-a" id="shop-filter-radio_2" value="z-a">
                        <label for="shop-filter-radio_2">Z to A</label>
                    </div>
                    <div class="btn btn-primary" onclick="applyFilters()">Apply</div>

                </form>

            </div>

            <div class="col-sm-8 col-md-9">
                <!-- Filters -->
                <ul class="shop__sorting">

                </ul>

                <div class="row">
                    {{#each productdata}}
                    <div class="col-sm-6 col-md-4">
                        <div style="border-bottom: #2185e3;" class="shop__thumb">
                            <a href="/user/product-detail/{{this._id}}">
                                <div style="width:100%;height:70%;" class="shop-thumb__img">
                                    <img style="width:200px;height: 200px;" src="/images/{{this.productImage1}}"
                                        class="img-responsive" alt="...">
                                </div>
                                <h5>
                                    {{this.product}}
                                </h5>
                                <h5 style="display: none;" id="quantity{{this._id}}">
                                    {{this.quantity}}
                                </h5>

                            </a>
                            <div class="shop-thumb__price">

                                <span class="price"><i class="fa fa-inr"></i>Price {{this.price}}</span>
                                <span style="color: green;" class="offer-price">Off <i class="fa fa-inr"></i>
                                    {{this.discount}}</span><br>
                                <a class="btn btn-sm" href="javascript:void(0);"
                                    onclick="addToCart('{{this._id}}', '{{this.quantity}}')">
                                    <button style="color: rgb(255, 255, 255);" class="button-79" style="width:40px;">
                                        Add to Cart <i class="fa fa-shopping-cart"></i>
                                    </button>
                                </a>
                                <a href="/wishlist/add-product/{{this._id}}"><button style="color: rgb(255, 255, 255);"
                                        class="button-79" style="width:40px;"> <i class="fa fa-heart"></i></button></a>

                            </div>

                        </div>

                    </div>
                    {{/each}}

                </div> <!-- / .row -->

                <!-- Pagination -->
                <!-- / .row -->

            </div> <!-- / .col-sm-8 -->
        </div> <!-- / .row -->
    </div>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/otp.css">
  <script src="https://smtpjs.com/v3/smtp.js">
  </script>

</head>

<body>
  <br><br>
  
  <form action="/user/signup/verification" method="post">
    <form action="javascript: void(0)" class="otp-form" name="otp-form">
      <div class="box1">
        <div style="padding-top: 10%;border: 1px;" class="title">
          <p style="color: rgb(66, 70, 70);font-size:large ;text-align: center;">Please enter the Password to verify
            your account</p>

          <p style="color: rgb(66, 70, 70);font-size:small; text-align: center;" class="info">A one time password is
            sent to {{this.email}}
          </p>

          <p class="msg" style="text-align: center;">Please enter OTP to verify</p>
          {{!-- {{#if message}}
          <p id="otp-correct" style="color: red; font-size: medium;">{{this.message}}</p>
          <a style="text-decoration: none;color: rgb(40, 40, 41);font-size: small;" href="/user/resend-otp ">Resend One
            Time Password</a>
          {{/if}} --}}

          <p id="otp-Time">30</p>
        </div>
      </div>

      <div class="otp-input-fields">
        <input type="number" name="otp">
      </div>

      <div class="result">
        <p id="_otp" class="_notok">

          <button type="submit" class="btn btn-warning otp-verify">Next</button>
        </p>
      </div>
    </form>
  </form>
  <div class="result">
    <p id="_otp" class="_notok">
      <a href="/user/resend-otp"><button style="display: none;" type="submit" class="btn btn-warning otp-btn">Resend</button></a>
    </p>
  </div>
  

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/style.css">


  <script>
  let count = 30;
  let timer = setInterval(function () {
    document.querySelector('.otp-btn').style.display = 'none';
    document.getElementById("otp-Time").innerHTML = count;
    count--;
    if (count < 0) {
      clearInterval(timer);
      document.querySelector('.otp-btn').classList.add('otp-btn');
      document.querySelector('.otp-verify').style.display = 'none'; // Hide "Next" button
      document.querySelector('.otp-btn').style.display = 'inline-block'; // Display "Resend" button
    }
  }, 1000);
</script>
</body>

</html>
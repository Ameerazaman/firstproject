                                <tr style="margin: 20px;">
                                    <td width="45%">
                                        <div class="display-flex align-center">
                                            <div class="img-product">
                                                <img src="/images/{{this.product.productImage1}}" alt=""
                                                    class="mCS_img_loaded">
                                            </div>
                                            <div class="name-product">
                                                {{this.product.product}}
                                            </div>
                                        </div>
                                    </td>
                                    <td width="15%" class="price">{{this.product.price}}</td>
                                    <td width="15%"><span class="in-stock-box">{{this.product.status}}</span></td>

                                    <td><button onclick="addToCart('{{this.product._id}}', '{{this.product.quantity}}')"
                                            class="round-black-btn small-btn">Add to Cart</button>
                                    </td>


                                    <td><button onclick="deleteProduct('{{this._id}}')"><img
                                                style="height: 20px;width: ;20px" class="img-icon"
                                                src="data:image/png;base64,"
                                                alt=""></button></td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    function addToCart(id, quantity) {
        var stock = parseInt(quantity, 10); // Parse the stock quantity as an integer

        if (stock < 1) {
            Swal.fire({
                title: 'Out of Stock',
                text: 'This product is out of stock',
                icon: 'error',
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'OK'
            });
        } else {
            window.location.href = "/wishlist/add-to-cart/" + id;
        }
    }
</script>
{{!-- delete product from wishlist --}}
<script>
    function deleteProduct(productId) {
        console.log("delete")
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this product!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        }).then((willDelete) => {
            if (willDelete) {
                // Perform AJAX request to delete the product
                fetch(`/wishlist/delete/${productId}`, {
                    method: 'DELETE', // Change method to DELETE
                })
                    .then(response => {
                        if (response.ok) {
                            // Successful deletion, show success message
                            return response.json(); // Assuming your server returns JSON data
                        } else {
                            // Error occurred, show error message
                            throw new Error('Failed to delete product');
                        }
                    })
                    .then(data => {
                        swal("Poof! Your product has been deleted!", { icon: "success" })
                            .then(function () {
                                window.location.href = "/wishlist";
                            });
                    })
                    .catch(error => {
                        // Network error or server error, show error message
                        swal("Error", error.message, "error");
                    });
            } else {
                // User clicked cancel, do nothing
                swal("Your product is safe!");
            }
        });
    }
</script>

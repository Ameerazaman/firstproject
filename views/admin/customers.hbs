    <script>
        const productsPerPage = 5;
        const tbody = document.getElementById('customerBody');
        const rows = Array.from(tbody.querySelectorAll('tr'));
        let currentPage = 1;

        function displayPage(page) {
            const startIndex = (page - 1) * productsPerPage;
            const endIndex = startIndex + productsPerPage;

            rows.forEach((row, index) => {
                if (index >= startIndex && index < endIndex) {
                    row.style.display = 'table-row';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function displayPagination() {
            document.getElementById('prevButton').addEventListener('click', () => {
                if (currentPage > 1) {
                    currentPage--;
                    displayPage(currentPage);
                }
            });

            document.getElementById('nextButton').addEventListener('click', () => {
                const totalPages = Math.ceil(rows.length / productsPerPage);
                if (currentPage < totalPages) {
                    currentPage++;
                    displayPage(currentPage);
                }
            });
        }

        displayPage(currentPage);
        displayPagination();

    </script>

    <script>
        // block user --}}
        function blockUser(userId) {
            swal({
                title: "Are you sure?",
                text: "Once blocked, the user will not be visible !",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willblock) => {
                    if (willblock) {
                        // Perform AJAX request to unlist the product
                        fetch(`/admin/block/${userId}`, {
                            method: 'POST',
                        })
                            .then(response => {
                                if (response.ok) {
                                    // Product unlisted successfully, show success message
                                    swal("User Blocked!", {
                                        icon: "success"

                                    }).then(function () {
                                        window.location.href = "/admin/customers"
                                    });
                                    // Optionally, you can update the UI here
                                } else {
                                    // Error occurred, show error message
                                    swal("Error", "Failed to block user", "error");
                                }
                            })
                            .catch(error => {
                                // Network error, show error message
                                swal("Error", "Failed to block user", "error");
                            });
                    } else {
                        // User clicked cancel, do nothing
                        swal("user is safe!");
                    }
                });
        }
    </script>
